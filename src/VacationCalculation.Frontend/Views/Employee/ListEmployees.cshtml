@model IEnumerable<VacationCalculation.Frontend.Models.Employee.EmployeeViewModel>

@{
    ViewData["Title"] = "Lista Empleados";
}

<div>
    <div>
        @Html.ActionLink("Crear Nuevo", "CreateEmployee")
    </div>
    <table>
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "EditEmployee", new { id = item.Id }, new { @class = "btn btn-sm me-2 btn-primary" })
                        <form asp-action="DeleteEmployee" method="post">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@model IEnumerable<VacationCalculation.Frontend.Models.EmployeeType.EmployeeTypeViewModel>

@{
    ViewData["Title"] = "Tipos de empleados";
}

<div class="card">
    <div class="card-header">
        @Html.ActionLink("Crear Nuevo", "CreateEmployeeType")
    </div>
    <div class="card-body">
        <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    #
                </th>
                <th>
                    Nombre
                </th>
                <th>
                    Dias por año
                </th>
                <th>
                    Acciones
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DaysPerYear)
                    </td>
                    <td class="d-flex">
                        @Html.ActionLink("Editar", "EditEmployeeType", new { id = item.Id }, new { @class = "btn btn-sm me-2 btn-primary" })
                        <form asp-action="DeleteEmployeeType" method="post">
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
</div>